    images: [
      { src: "./img/feat/goku-skills-1.jpeg", alt: "Goku Feature" },
      {
        src: "./img/feat/goku-skills-2.jpg",
        title: "Broli",
        description: "An anime and gaming-inspired NFT collection.",
        isComingSoon: true,
      },
      {
        src: "./img/feat/goku-skills-3.jpg",
        title: "Saiyan Power",
        description: "An anime and gaming-inspired NFT collection.",
        isComingSoon: true,
      },
      {
        src: "./img/feat/goku-skills-4.gif",
        title: "Saiyan Power",
        description: "An anime and gaming-inspired NFT collection.",
        isComingSoon: true,
      },
      {
        src: "./img/feat/goku-skills-5.jpg",
        title: "Saiyan Power",
        description: "An anime and gaming-inspired NFT collection.",
        isComingSoon: true,
      },
    ],
  },
  vegeta: {
    title: "Vegeta's Skills",
    images: [
      { src: "./img/feat/vegeta-skills-1.jpeg", alt: "Vegeta Feature" },
      {
        src: "./img/feat/vegeta-skills-2.jpg",
        title: "Pride",
        description: "The prince of all Saiyans.",
        isComingSoon: true,
      },
      {
        src: "./img/feat/vegeta-skills-3.jpg",
        title: "Saiyan Elite",
